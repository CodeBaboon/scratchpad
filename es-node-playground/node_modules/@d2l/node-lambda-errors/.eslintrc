root: true

env:
    node: true
    es6: true

extends:
    - "eslint:recommended"
    - "airbnb-base"

parserOptions:
    sourceType: "scripts"

rules:
    comma-dangle: 0
    class-methods-use-this: 0
    func-names: 0
    indent: [2, 2]
    no-tabs: 0
    no-underscore-dangle: 0
    space-before-function-paren: 0
